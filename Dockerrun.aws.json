{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "environment": [
                {
                    "name": "DATABASE_URL",
                    "value": "postgres://idealize:idealize@postgres:5432/idealize"
                },
                {
                    "name": "NODE_ENV",
                    "value": "production"
                },
                {
                    "name": "PORT",
                    "value": "8080"
                }
            ],
            "essential": true,
            "memory": 200,
            "image": "shaoyi1997/idealize-api:latest",
            "mountPoints": [
                {
                    "containerPath": "/app/node_modules",
                    "sourceVolume": "Api_Node_Modules"
                }
            ],
            "name": "api",
            "portMappings": [
                {
                    "containerPort": 8080,
                    "hostPort": 8080
                }
            ],
            "links": [
                "postgres"
            ],
            "command": ["yarn", "start"]
        },
        {
            "environment": [
                {
                    "name": "NODE_ENV",
                    "value": "production"
                },
                {
                    "name": "PORT",
                    "value": "3000"
                }
            ],
            "essential": true,
            "memory": 200,
            "image": "shaoyi1997/idealize-app:latest",
            "mountPoints": [
                {
                    "containerPath": "/app/node_modules",
                    "sourceVolume": "App_Node_Modules"
                }
            ],
            "name": "app",
            "portMappings": [
                {
                    "containerPort": 3000,
                    "hostPort": 3000
                }
            ],
            "links": [
                "api"
            ]
        },
        {
            "environment": [
                {
                    "name": "POSTGRES_USER",
                    "value": "idealize"
                },
                {
                    "name": "POSTGRES_PASSWORD",
                    "value": "idealize"
                },
                {
                    "name": "POSTGRES_DB",
                    "value": "idealize"
                }
            ],
            "essential": true,
            "memory": 200,
            "image": "postgres:11.9",
            "mountPoints": [
                {
                    "containerPath": "/var/lib/postgresql/data",
                    "sourceVolume": "Pgdata"
                }
            ],
            "name": "postgres",
            "portMappings": [
                {
                    "containerPort": 5432,
                    "hostPort": 5432
                }
            ]
        },
        {
            "essential": true,
            "memory": 200,
            "image": "shaoyi1997/idealize-reverse-proxy:latest",
            "name": "reverse-proxy",
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80
                }
            ],
            "links": [
                "app", "api"
            ]
        }
    ],
    "family": "",
    "volumes": [
        {
            "host": {
                "sourcePath": "app_node_modules"
            },
            "name": "App_Node_Modules"
        },
        {
            "host": {
                "sourcePath": "api_node_modules"
            },
            "name": "Api_Node_Modules"
        },
        {
            "host": {
                "sourcePath": "pgdata"
            },
            "name": "Pgdata"
        }
    ]
}
